@model IEnumerable<SaaS__05.Models.SaaS__Message__Modele>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutBack.cshtml";
}

<h2>List Message Modele</h2>
<div class="card-body">
    <div class="table-responsive">
        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0" >
            <thead>
                <p>
                    @Html.ActionLink("Create", "Create")
                </p>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.SaaS__Message__Type.Title)</th>
                    <th>@Html.DisplayNameFor(model => model.Title)</th>
                    <th>@Html.DisplayNameFor(model => model.Description)</th>
                    <th>Actions</th>

                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.SaaS__Message__Type.Title)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Title)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Description)
                        </td>
                        
                        <td>
                            @Html.ActionLink("Create", "Create") |
                            @Html.ActionLink("Edit", "Edit", new { id = item.ID_ }) |
                            @Html.ActionLink("Details", "Details", new { id = item.ID_ }) |
                            @Html.ActionLink("Delete", "Delete", new { id = item.ID_ })
                        </td>
                    </tr>

                }
            </tbody>
        </table>
    </div>
</div>



