@model IEnumerable<SaaS__05.Models.SaaS__Entreprise>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutBack.cshtml";
}

<div class="card-body">
    <div class="table-responsive">
        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0" border="2">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Title)</th>
                    <th>@Html.DisplayNameFor(model => model.Email)</th>
                    <th>@Html.DisplayNameFor(model => model.Addresse)</th>
                    <th>@Html.DisplayNameFor(model => model.Num_Telephone)</th>
                    <th>@Html.DisplayNameFor(model => model.Code_TVA)</th>
                    <th>@Html.DisplayNameFor(model => model.RNE)</th>
                    <th>Actions</th>

                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Title)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Addresse)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Num_Telephone)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Code_TVA)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.RNE)
                        </td>
                         <td>
                            @Html.ActionLink("Create", "Create") |
                            @Html.ActionLink("Edit", "Edit", new { id = item.ID_ }) |
                            @Html.ActionLink("Details", "Details", new { id = item.ID_ }) |
                            @Html.ActionLink("Delete", "Delete", new { id = item.ID_ })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>